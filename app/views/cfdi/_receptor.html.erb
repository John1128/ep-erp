<div class="col-10">
    <div class="form-group row">
        <label for="rfc_receptor" class="col-sm-3 col-form-label"><%= I18n.t("cliente.rfc")%></label>
        <div class="col-sm-9">
            <select id="rfc_receptor" class="form-control select2-hidden-accessible" data-placeholder="<%= I18n.t('cliente.rfc') %>" tabindex="-1" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="RFC del cliente a quien facturar" data-tippy-placement="bottom">
                <option></option>
                <% Cliente.all.each do |c| %>
                    <option value="<%= c.id %>"><%= c.rfc %></option>
                <% end %>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label for="receptor_razon_social" class="col-sm-3 col-form-label"><%= I18n.t("cliente.razon_social")%></label>
        <div class="col-sm-9">
            <input type="text" class="form-control" id="receptor_razon_social" value="" readonly data-toggle="tooltip" data-placement="top" title="Razon Social del cliente" data-tippy-placement="bottom">
        </div>
    </div>
    <div class="form-group row">
        <label for="receptor_nro_reg_id_trib" class="col-sm-3 col-form-label"><%= I18n.t("cliente.nro_reg_id_trib")%></label>
        <div class="col-sm-9">
            <input type="text" class="form-control" id="receptor_nro_reg_id_trib" value="" >
        </div>
    </div>
    <div class="form-group row">
        <label for="receptor_email" class="col-sm-3 col-form-label"><%= I18n.t("cliente.email")%></label>
        <div class="col-sm-9">
            <input type="text" class="form-control" id="receptor_email" value="" readonly>
        </div>
    </div>
    <div class="form-group row">
        <label for="receptor_uso_cfdi" class="col-sm-3 col-form-label"><%= I18n.t("cliente.uso_cfdi")%></label>
        <div class="col-sm-9">
            <select id="receptor_uso_cfdi" class="form-control select2-hidden-accessible" data-placeholder="<%= I18n.t("cliente.uso_cfdi")%>" tabindex="-1" aria-hidden="true">
                <option></option>
                <% UsoCfdi.all.each do |u| %>
                    <option value="<%= u.id %>"><%= u.descripcion %></option>
                <% end %>
            </select>
        </div>
    </div>

    <hr>

    <div class="row">
        <div class="col-lg-8 col-md-12">
            <div class="form-group">
                <div class="custom-control custom-checkbox" data-toggle="tooltip" data-placement="top" title="Indicar si desea incluir la direcciÃ³n del receptor (Opcional)" data-tippy-placement="bottom">
                    <input type="checkbox" class="custom-control-input" id="receptor_set_direccion" value="1">
                    <label class="custom-control-label" for="receptor_set_direccion"><%= I18n.t("emisor.direccion")%></label>
                </div>
            </div>
        </div>
    </div>
    <div id="r_domicilio">
        <div class="form-group row">
            <label for="receptor_domicilio_calle" class="col-sm-2 col-form-label"><%= I18n.t("domicilio_fiscal.calle")%></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="receptor_domicilio_calle" readonly>
            </div>
        </div>
        <div class="form-group row">
            <label for="receptor_domicilio_nro_e" class="col-sm-2 col-form-label"><%= I18n.t("domicilio_fiscal.numero_exterior")%></label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="receptor_domicilio_nro_e" readonly>
            </div>
            <label for="receptor_domicilio_colonia" class="col-sm-2 col-form-label"><%= I18n.t("domicilio_fiscal.colonia")%></label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="receptor_domicilio_colonia" readonly>
            </div>
        </div>
        <div class="form-group row">
            <label for="receptor_domicilio_nro_i" class="col-sm-2 col-form-label"><%= I18n.t("domicilio_fiscal.numero_interior")%></label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="receptor_domicilio_nro_i" readonly>
            </div>
            <label for="receptor_domicilio_municipio" class="col-sm-2 col-form-label"><%= I18n.t("domicilio_fiscal.municipio")%></label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="receptor_domicilio_municipio" readonly>
            </div>
        </div>
        <div class="form-group row">
            <label for="receptor_domicilio_localidad" class="col-sm-2 col-form-label"><%= I18n.t("domicilio_fiscal.localidad")%></label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="receptor_domicilio_localidad" readonly>
            </div>
            <label for="receptor_domicilio_estado" class="col-sm-2 col-form-label"><%= I18n.t("domicilio_fiscal.estado")%></label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="receptor_domicilio_estado" readonly>
            </div>
        </div>
        <div class="form-group row">
            <label for="receptor_domicilio_referencia" class="col-sm-2 col-form-label"><%= I18n.t("domicilio_fiscal.referencia")%></label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="receptor_domicilio_referencia" readonly>
            </div>
            <label for="receptor_pais" class="col-sm-2 col-form-label"><%= I18n.t("domicilio_fiscal.pais")%></label>
            <div class="col-sm-4">
                <select id="receptor_pais" class="form-control select2-hidden-accessible" data-placeholder="<%= I18n.t("domicilio_fiscal.pais")%>" tabindex="-1" aria-hidden="true">
                    <option></option>
                    <% Pais.all.each do |p| %>
                        <option value="<%= p.id %>"><%= p.nombre %></option>
                    <% end %>
                </select>
            </div>
        </div>
        <div class="form-group row float-rigth">
            <label for="receptor_domicilio_codigo_postal" class="col-sm-2 col-form-label"><%= I18n.t("domicilio_fiscal.codigo_postal")%></label>
            <div class="col-sm-4">            
                <input type="text" class="form-control" id="receptor_domicilio_codigo_postal" readonly>
            </div>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-12">
            
            <button class="btn btn-primary icon-left mr-3 float-md-right" id="receptor_guardar" type="button">
                <%= I18n.t("cfdi.actions.save_continue")%>
            </button>
            <button class="btn btn-primary icon-left mr-3 float-md-right" id="receptor_volver" type="button">
                <%= I18n.t("cfdi.actions.back")%>
            </button>
        </div>
    </div>
</div>