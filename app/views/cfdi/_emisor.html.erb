    <div class="form-group row">
        <label for="emisor_rfc" class="col-sm-3 col-form-label"><%= I18n.t("emisor.rfc")%></label>
        <div class="col-sm-9">
            <input type="text" class="form-control" id="emisor_rfc" value="<%= @emisor.rfc %>" readonly data-toggle="tooltip" data-placement="top" title="RFC del Emisor" data-tippy-placement="bottom">
        </div>
    </div>
    <div class="form-group row">
        <label for="emisor_razon_social" class="col-sm-3 col-form-label"><%= I18n.t("emisor.razon_social")%></label>
        <div class="col-sm-9">
            <input type="text" class="form-control" id="emisor_razon_social" value="<%= @emisor.razon_social %>" readonly data-toggle="tooltip" data-placement="top" title="<%= I18n.t("emisor.razon_social")%>" data-tippy-placement="bottom">
        </div>
    </div>
    <div class="form-group row">
        <label for="emisor_regimen_fiscal" class="col-sm-3 col-form-label"><%= I18n.t("emisor.regimen_fiscal")%></label>
