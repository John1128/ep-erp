        </div>
    </div>
    <div class="form-group row">
        <label for="emisor_email" class="col-sm-3 col-form-label"><%= I18n.t("emisor.email")%></label>
        <div class="col-sm-9">
            <input type="text" class="form-control" id="emisor_email" value="<%= @emisor.email %>" readonly>
        </div>
    </div>
