                <option></option>
                <% RegimenFiscal.all.each do |rf| %>
                    <option value="<%= rf.id %>"><%= rf.descripcion %></option>
                <% end %>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label for="emisor_codigo_postal" class="col-sm-3 col-form-label"><%= I18n.t("emisor.codigo_postal")%></label>
        <div class="col-sm-9">
